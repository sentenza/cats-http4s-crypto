<configuration>

    <!--  STDOUT   -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} TKD [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- <logger name="org.apache.http.client.protocol" level="ERROR" /> -->

    <!--change to DEBUG for a lot of logging :D-->
    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
